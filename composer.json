{
    "name": "loevgaard/dandomain-altapay-bundle",
    "description": "Symfony bundle for handling payments on Dandomain using AltaPay",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Joachim LÃ¸vgaard",
            "email": "joachim@loevgaard.dk"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^7.0",
        "symfony/framework-bundle": "^3.0",
        "loevgaard/dandomain-pay-php-sdk": "^1.0@dev",
        "loevgaard/altapay-php-sdk": "^1.0@dev",
        "doctrine/orm": "^2.5",
        "cocur/slugify": "^2.5",
        "sensio/framework-extra-bundle": "^3.0",
        "doctrine/doctrine-bundle": "^1.6"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^1.11",
        "symfony/phpunit-bridge": "^3.0",
        "phpunit/phpunit" : "~5.5||~6.0"
    },
    "autoload": {
        "psr-4": {
            "Loevgaard\\DandomainAltapayBundle\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "./vendor/bin/php-cs-fixer fix --verbose --dry-run",
        "fix-style": "./vendor/bin/php-cs-fixer fix --verbose"
    }
}
