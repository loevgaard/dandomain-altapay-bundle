{% trans_default_domain 'LoevgaardDandomainAltapayBundle' %}

<h1>{{ 'terminal.index.heading'|trans }}</h1>

{% if terminals|length %}
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>{{ 'terminal.label.id'|trans }}</th>
                <th>{{ 'terminal.label.title'|trans }}</th>
                <th>{{ 'terminal.label.url'|trans }}</th>
                <th>{{ 'terminal.label.country'|trans }}</th>
                <th>{{ 'terminal.label.currencies'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for terminal in terminals %}
            <tr>
                <td>{{ terminal.id }}</td>
                <td>{{ terminal.title }}</td>
                <td><input type="text" class="form-control" value="{{ url('loevgaard_dandomain_altapay_payment_new', { terminal: terminal.slug }) }}"></td>
                <td>{{ terminal.country }}</td>
                <td>{{ terminal.currencies|join(', ') }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <div class="alert alert-info">{{ 'terminal.index.empty_collection'|trans }}</div>
{% endif %}