{% trans_default_domain 'LoevgaardDandomainAltapayBundle' %}

<h1>{{ 'payment.index.heading'|trans }}</h1>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>{{ 'payment.label.order_id'|trans }}</th>
            <th>{{ 'layout.actions'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for payment in payments %}
        <tr>
            <td>{{ payment.orderId }}</td>
            <td>
                <a class="btn btn-sm btn-default" href="">{{ 'layout.show'|trans }}</a>
                <a class="btn btn-sm btn-default" href="{{ path('loevgaard_dandomain_altapay_payment_capture', {paymentId: payment.id}) }}">{{ 'payment.label.capture'|trans }}</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>